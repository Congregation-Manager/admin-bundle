<!doctype html>
<html lang="{{ app.request.locale|slice(0, 2) }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    {% block stylesheets %}
        {{ encore_entry_link_tags('admin') }}
    {% endblock %}
    
    <title>{% block title %}{{ 'cm.meta_title.default'|trans }}{% endblock %}</title>
</head>
<body>
    {% block body %}
        <header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
            <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="{{ path('admin_dashboard') }}">{{ 'cm.admin_nav.title'|trans }}</a>
    
            <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar-menu" aria-controls="sidebar-menu" aria-expanded="false" aria-label="{{ 'cm.admin_nav.toggle'|trans }}">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="w-100 row text-center">
                <div class="col">
                    <a class="d-block text-decoration-none text-white" href="{{ path('admin_profile_update') }}">{{ 'cm.profile_update.title'|trans }}</a>
                </div>
                <div class="col">
                    <a class="d-block text-decoration-none text-white" href="{{ path('admin_change_password') }}">{{ 'cm.change_password.title'|trans }}</a>
                </div>
            </div>
            <div class="navbar-nav">
                <div class="nav-item text-nowrap">
                    <a class="nav-link px-3" href="{{ path('admin_logout') }}" {{ test_html_attribute('logout-button') }}>{{ 'cm.admin_nav.logout'|trans }}</a>
                </div>
            </div>
        </header>
    
        <div class="container-fluid">
            <div class="row">
                <nav id="sidebar-menu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                    <div class="position-sticky pt-3">
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_dashboard') }}">
                                    <i class="bi bi-speedometer2"></i>
                                    {{ 'cm.label.dashboard'|trans }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_congregation_index') }}">
                                    <i class="bi bi-house-door"></i>
                                    {{ 'cm.congregation.title'|trans }}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('admin_brother_index') }}">
                                    <i class="bi bi-people"></i>
                                    {{ 'cm.brother.title'|trans }}
                                </a>
                            </li>
                        </ul>
        
                        <ul class="nav flex-column mt-5">
                            {{ render(controller('congregation_manager_admin.controller.locale::renderAction')) }}
                        </ul>
                        
                    </div>
        
        
                </nav>
    
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                        {% block content %}
                        {% endblock %}
                    </div>
                </main>
            </div>
        </div>
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('admin') }}
    {% endblock %}

</body>
</html>
