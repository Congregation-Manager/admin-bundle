{% extends '@CongregationManagerAdmin/base.html.twig' %}

{% block title %}{{ 'cm.brother.index.meta_title'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row mb-3">
            <div class="col-12 col-md-8 col-lg-6">
                <h1>{{ 'cm.brother.title'|trans }}</h1>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-12 col-md-8 col-lg-6">
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">{{ 'cm.label.id'|trans }}</th>
                        <th scope="col">{{ 'cm.label.first_name'|trans }}</th>
                        <th scope="col">{{ 'cm.label.middle_name'|trans }}</th>
                        <th scope="col">{{ 'cm.label.last_name'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for brother in brothers %}
                        <tr>
                            <th scope="row">{{ brother.id }}</th>
                            <td>{{ brother.firstName }}</td>
                            <td>{{ brother.middleName }}</td>
                            <td>{{ brother.lastName }}</td>
                            <td><a href="{{ path('admin_brother_show', {id: brother.id}) }}">{{ 'cm.label.view'|trans }}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
